<%- include("base") %>

<div class="hCustD">
    <h1>&#9664; TRANSFERRING TO &#9658; </h1>
</div>

<div class="table">
    <table>
        <tr class ="header1">
            <th>Customer Name</th>
            <th>Email</th>
            <th>&#8377;</th>
            <th>&#8595;</th>
        </tr>
    <% for(let current of users){ %>

        <% if(!user._id.equals(current._id)){ %>
            <tr class ="header2">
                <td><%= current.name %></td>
                <td><%= current.email%></td>
                <td><%= current.credits%></td>
	  <td><button class="selectuser"><a href="/view/<%= user._id %>/<%= 
	     current._id %>">Transfer</a></button></td>
            </tr>
        <% } %>

    <% } %>
    </table>    
</div>