<%- include("base") %>
<div class="hCustD">
    <h1>&#9664; TRANSACTION HISTORY &#9658;</h1>
</div>

<div class='table'>

    <table>
        <tr class ="header1">
            <th>Transferred From</th>
            <th>Transferred To</th>
            <th>No. of Credits</th>
        </tr>

    <% for(let transaction of transactions){ %>
        <tr class ="header2">
            <td><%= transaction.fromName %></td>
            <td><%= transaction.toName %></td>
            <td><%= transaction.transfer %></td>
        </tr>
<% } %>
    </table>

</div>